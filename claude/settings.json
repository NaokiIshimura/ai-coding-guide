{
  "permissions": {
    "allow": [
      "Bash(claude agents)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(colima:*)",
      "mcp__*",
      "Bash(code --diff*)", // -diffオプション付きのcodeコマンドのみ
      "Bash(code *)" // より広い範囲を許可
    ],
    "deny": [
      "Read(/coverage/)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "command -v afplay > /dev/null 2>&1 && afplay ~/ai-coding-guide/sounds/Glass.aiff || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "command -v afplay > /dev/null 2>&1 && afplay ~/ai-coding-guide/sounds/Funk.aiff || true"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-readable.sh"
  },
  "model": "opusplan"
}